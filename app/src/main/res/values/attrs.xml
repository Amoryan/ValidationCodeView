<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ValidationCodeView">

        <attr name="vcvItemCount" format="integer" />
        <attr name="vcvItemWidth" format="dimension|reference" />
        <attr name="vcvItemHeight" format="dimension|reference" />
        <attr name="vcvItemDistance" format="dimension|reference" />

        <attr name="vcvBorderWidth" format="dimension|reference" />
        <attr name="vcvBorderStyle" format="enum">
            <enum name="RECTANGLE" value="0" />
            <enum name="LINE" value="1" />
        </attr>
        <attr name="vcvBorderRadius" format="dimension|reference" />

        <attr name="vcvContentSize" format="dimension|reference" />
        <attr name="vcvContentStatus" format="enum">
            <enum name="SHOW" value="0" />
            <enum name="HIDE" value="1" />
        </attr>
        <attr name="vcvContentRadiusWhenIsHidden" format="dimension|reference" />

        <attr name="vcvCompletedBorderColor" format="color|reference" />
        <attr name="vcvUnCompleteBorderColor" format="color|reference" />
        <attr name="vcvCompletedContentColor" format="color|reference" />
        <attr name="vcvUnCompleteContentColor" format="color|reference" />
    </declare-styleable>
</resources>